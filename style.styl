@font-face
	font-family "Avenir Next"
	src url(avenirNext.otf)
	
grey = #565656
brown = #81523F
red = #fc5e64
green = #B2FFA9
beige = #F4CBA5
darkBrown = #3F2A2B

sans-font = "Avenir Next"
slab-font = "Arvo"

h1, h2, h3 
	font-family sans-font

body 
	margin 0 
	padding 0
	font-family sans-font
	background url('splash.jpeg')
	background-attachment fixed
	
.coating 
	position fixed
	z-index 9
	top 0
	left 0
	width 100%
	height 100%
	background rgba(0,0,0,.5)

a 
	link-color = red
	text-decoration none
	color link-color
	border-bottom 1px solid link-color
	
.to-top
	text-align center
	margin-top 25px

.to-top a 
	color white
	border-bottom 1px solid white

.header 
	position fixed
	width 100%
	z-index 1
	top 50px
	
.filler 
	height 200px
	display block
	
.divider 
	text-align center
	
popup-width = 60%
popup-height = 80%

.pop-up
	width popup-width
	height popup-height
	overflow auto
	margin auto
	position fixed
	top 0
	left 0
	bottom 0
	right 0
	background darkBrown
	padding 50px
	z-index 10
	color white
	line-height 21px
	box-shadow 0px 1px 3px 1px rgba(10, 10, 10, .3)
	font-family slab-font
	h3 
		margin-top 20px

h1 
	font-weight 400
	text-align center
	margin 0
	font-size 50px
	top 50px
	
h2 
	text-align center
	font-weight 400
	margin 0
	margin-bottom 5px
	font-size 35px
	color beige
	
h2.subtitle
	font-size 23px
	color grey
	margin-top 10px
	margin-bottom 50px
	a 
		color grey
		border-bottom 1px solid grey
		
h3 
	font-size 20px
	color #c4c4c4
	font-weight 400
	text-align center
	margin-top 0px
	margin-bottom 15px
	
.paragraph-container
	position relative
	z-index 2
	font-family slab-font
	container-padding = 30px
	padding-top container-padding
	padding-bottom container-padding + 10px
	width 100%
	background darkBrown
	color white
	margin-bottom 110px
	h2 
		margin-top 0
	h2, h3 
		font-family sans-font
		
.table-of-contents
	a 
		color white
		border-bottom 1px solid white
	p 
		font-size 20px
		line-height 35px
		text-align center
	.label0, .label11
		display none

p, ul
	margin-left 0
	width 500px
	margin 0 auto
	display block
	font-size 16px
	line-height 21px

ul 
	margin-top 15px
	padding-left 0
	text-align center
	li 
		display inline-block
	
	